{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",
    "noEmit": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "files": ["src/types/express/index.d.ts"]
}